<%= render 'shared/title' , title: "List of all users" %>

<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <%=user.username %>
          <br>
          <%= link_to user.name.capitalize,user_path(user) %>
          <p><small><%= pluralize(user.posts.count, "post") if user.posts %>
          </small></p>
          <br>
          <% if logged_in? && (user==current_user)  %>
            <%= link_to "Edit this User", edit_user_path(user) %>
          <% end %>

        </div>
      </div>
    </ul>
  <% end %>
</div>